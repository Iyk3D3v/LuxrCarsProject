@model ProductModel[]
@{
    ViewBag.Title = "Index";

    int num = Model.Count();

    var count = 1;
    var countt = 1000;
    var counttt = 10000;
}


<div class="slider">
    <ul class="slides">
        <li>

            <img src="~/Lib/materialize/dist/img/dustin.jpg" /> <alt>just here</alt><!-- random image -->
            <div class="caption center-align">
                <h3>This is our big Tagline!</h3>
                <h5 class="light grey-text text-lighten-3">Here's our small slogan.</h5>
            </div>
        </li>
        <li>

            <img src="~/Lib/materialize/dist/img/benjamin-child-90768.jpg" /> <!-- random image -->
            <div class="caption left-align">
                <h3>Left Aligned Caption</h3>
                <h5 class="light grey-text text-lighten-3">Here's our small slogan.</h5>
            </div>
        </li>
     
    </ul>
</div>

<div class="row">
    @*//for(int i = @num; i < )*@
    @foreach (var products in Model)
    {
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <div class="card-tabs">
                        <ul class="tabs tabs-fixed-width">
                            <li class="tab"><a href="#@count">Img 1</a></li>
                            <li class="tab"><a class="active" href="#@countt">Img 2</a></li>
                            <li class="tab"><a href="#@counttt">Img 3</a></li>
                        </ul>
                    </div>
                    <div class="card-content grey lighten-4">
                        <div id="@count"><img src="~/Lib/materialize/dist/img/benjamin-child-90768.jpg"></div>
                        <div id="@countt"><img src="~/Lib/materialize/dist/img/dustin.jpg" /></div>
                        <div id="@counttt"> <img src="~/Lib/materialize/dist/img/brooke-lark-176362.jpg" /></div>
                    </div>
                    
                    <span class="card-title">@products.Name</span>
                    <a class="btn-floating halfway-fab waves-effect waves-light red" href="@Url.Action("Add","Cart", new {id = products.ProductID })"><i class="material-icons">shopping_cart</i></a>
                </div>
                <div class="card-content">
                    <p>@products.Price</p>
                    <p>@products.Speed</p>
                </div>
            </div>
        </div>
        count++;
        countt++;
        counttt++;
    }
    
</div>


 



