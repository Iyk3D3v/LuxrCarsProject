@model LuxrCars.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V13</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    
    <link href="~/Lib/Login_v13/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Lib/Login_v13/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Lib/Login_v13/fonts/Linearicons-Free-v1.0.0/icon-font.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Lib/Login_v13/vendor/animate/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Lib/Login_v13/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Lib/Login_v13/vendor/animsition/css/animsition.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Lib/Login_v13/vendor/select2/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Lib/Login_v13/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Lib/Login_v13/css/main.css" rel="stylesheet" />


    <link href="~/Lib/Login_v13/css/util.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body style="background-color: #999999;">

    <div class="limiter">
        <div class="container-login100">
            <div class="login100-more" style="background-image: url('../../Lib/Login_v13/images/fm.jpeg');"></div>

            <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {
                   
                    <span class="login100-form-title p-b-59">
                        Register
                    </span>


                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        <span class="label-input100">Email</span>
                        @Html.EditorFor(model => model.Email, new { htmlattributes = new { @class = "input100" } })
                       @*<input class="input100" type="text" placeholder="Email address...">*@
                       @Html.ValidationMessageFor(model =>model.Email,"") 
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="FirstName is required">
                        <span class="label-input100">First Name</span>
                        @Html.EditorFor(model => model.firstName, new { htmlattributes = new { @class = "input100" } })
                        @*<input class="input100" type="text" name="name" placeholder="First Name...">*@
                        <span class="focus-input100"></span>
                    </div>



                    <div class="wrap-input100 validate-input" data-validate="LastName is required">
                        <span class="label-input100">Last Name</span>
                        @Html.EditorFor(model => model.lastName, new { htmlattributes = new { @class = "input100" } })
                        @*<input class="input100" type="text" name="username" placeholder="Last Name...">*@
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        <span class="label-input100">Password</span>
                        @Html.EditorFor(model => model.passWord, new { htmlattributes = new { @class = "input100" } })
                       

                        @*<input class="input100" type="text" name="pass" placeholder="*************">*@
                       
                        <span class="focus-input100"></span>
                        
                    </div>
                    @Html.ValidationMessageFor(model => model.passWord)

                    <div class="wrap-input100 validate-input" data-validate="Repeat Password is required">
                        <span class="label-input100">Repeat Password</span>
                        @Html.EditorFor(model => model.confirmPassword, new { htmlattributes = new { @class = "input100" } })


                        @*<input class="input100" type="text" name="repeat-pass" placeholder="*************">*@
                        <span class="focus-input100"></span>
                        

                    </div>
                    @Html.ValidationMessageFor(model => model.passWord)
           

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Create Account
                            </button>
                        </div>

                        <a href="@Url.Action("Login", "Account")" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                            Login
                            <i class="fa fa-long-arrow-right m-l-5"></i>
                        </a>
                    </div>
                }
             
            </div>
        </div>
    </div>

    <script src="~/Lib/Login_v13/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->

    <script src="~/Lib/Login_v13/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->

    <script src="~/Lib/Login_v13/vendor/bootstrap/js/popper.js"></script>


    <script src="~/Lib/Login_v13/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->

    <script src="~/Lib/Login_v13/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->

    <script src="~/Lib/Login_v13/vendor/daterangepicker/moment.min.js"></script>

    <
    <script src="~/Lib/Login_v13/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->

    <script src="~/Lib/Login_v13/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->

    <script src="~/Lib/Login_v13/js/main.js"></script>
    
</body>
</html>


