@model LuxrCars.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = null;
   // var today = DateTime.Today.ToString();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    
    <link href="~/Lib/Login_v15/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->

    <link href="~/Lib/Login_v15/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    
    <link href="~/Lib/Login_v15/fonts/Linearicons-Free-v1.0.0/icon-font.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    
    <link href="~/Lib/Login_v15/vendor/animate/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    
    <link href="~/Lib/Login_v15/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
  
    <link href="~/Lib/Login_v15/vendor/animsition/css/animsition.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
   
    <link href="~/Lib/Login_v15/vendor/select2/select2.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
  
    <link href="~/Lib/Login_v15/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!--===============================================================================================-->
    
    <link href="~/Lib/Login_v15/css/main.css" rel="stylesheet" />

    
    <link href="~/Lib/Login_v15/css/util.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body>

   
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    <div class="login100-form-title" style="background-image: url(/Lib/Login_v15/images/d.jpeg);">

                        <span class="login100-form-title-1">
                            LOGIN <i class="fa fa-lock"></i>
                        </span>
                    </div>
                   @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login100-form validate-form" }))
                        {
                        @Html.ValidationSummary(false,"",new { @class ="text-danger"})
                   
                        <div class="wrap-input100 validate-input m-b-26" data-validate="Email is required">
                            <span class="label-input100">Email</span>
                            @Html.EditorFor(model => model.Emailing, new { htmlattributes = new { @class = "input100" } })
                            @*<input class="input100" type=@Html.EditorFor(model => model.Emailing) name="email" placeholder="Enter email">*@
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                            <span class="label-input100">@Html.LabelFor(model => model.Password)</span>
                            @Html.EditorFor(model => model.Password, new { htmlattributes = new { @class = "input100" } })
                            @*<input class="input100" type=@Html.EditorFor(model => model.Password) name="pass" placeholder="Enter password">*@
                            <span class="focus-input100"></span>
                        </div>

                        <div class="flex-sb-m w-full p-b-30">
                            <div class="contact100-form-checkbox">
                                
                                @*@Html.EditorFor(model => model.RememberMe, new { @class = "input-checkbox100"})
                                @Html.LabelFor(model => model.RememberMe)*@

                                <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                                <label class="label-checkbox100" for="ckb1">
                                    Remember me
                                </label>
                           </div>

                            <div>
                                <a href="~/Views/Home/Index.cshtml" class="txt1">
                                    Forgot Password?
                                </a>
                            </div>
                        </div>

                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn">
                                Login
                            </button>

                            <a href="@Url.Action("Register", "Account")" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                                Register
                                <i class="fa fa-long-arrow-right m-l-5"></i>
                            </a>

                            
                        </div>
                   }

                </div>
            </div>
        </div>
    
    

    <!--===============================================================================================-->
 
    <script src="~/Lib/Login_v15/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    
    <script src="~/Lib/Login_v15/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
   
    <script src="~/Lib/Login_v15/vendor/bootstrap/js/popper.js"></script>

    
    <script src="~/Lib/Login_v15/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    
    <script src="~/Lib/Login_v15/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    
    <script src="~/Lib/Login_v15/vendor/daterangepicker/moment.min.js"></script>

    <
    <script src="~/Lib/Login_v15/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    
    <script src="~/Lib/Login_v15/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    
    <script src="~/Lib/Login_v15/js/main.js"></script>

</body>
</html>